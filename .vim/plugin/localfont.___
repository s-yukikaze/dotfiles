if(!has('win32') && !has('win64'))
    throw 'localfont: Your platform is not supported.'
endif

let g:localfont_lib = get(g:, 'font_lib_path', expand("<sfile>:p:h") . 'localfont.dll')

function s:load_font(fontpath)
    let resultbuf = libcall(g:localfont_lib, 'load_font', fontpath)
endfunction

command -nargs=1 LocalFont :call s:load_font(<q-args>)

